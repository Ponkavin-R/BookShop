<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/login_bk_color"
    tools:context=".Home">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:elevation="4dp"
        app:contentInsetEnd="16dp"
        app:contentInsetStart="16dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:subtitle="Welcome to Book Bazaar"
        app:subtitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        app:subtitleTextColor="@android:color/white"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        app:titleTextColor="@android:color/white" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:text="Book Category"
        android:textSize="20dp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="#F8F8F8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Thriller -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/t2" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <Button
                        android:id="@+id/thriller"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thriller" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Fantasy -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/t1" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <Button
                        android:id="@+id/fantasy"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fantasy" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/tr3" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <Button
                        android:id="@+id/mystery"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mystery" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/tr3" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <Button
                        android:id="@+id/horror"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horror" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/tr3" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">

                    <Button
                        android:id="@+id/adventure"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adventure" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!-- Repeat the above LinearLayout structure for other genres (mystery, horror, adventure) -->

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="290dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="179dp"
                        android:layout_height="180dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/tr1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="181dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="NOBODY LIKES AN OUTSIDER "
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/pay1"
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="155dp"
                            android:layout_height="58dp"
                            android:layout_below="@+id/textView5"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="46dp"
                            android:layout_marginBottom="39dp"
                            android:background="@android:drawable/alert_dark_frame"
                            android:text="Click Here to buy"
                            android:textAlignment="center">

                        </Button>
                    </RelativeLayout>


                </TableRow>

                <!-- Row 1 -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Text Column -->
                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="180dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/tr2" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="181dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="THE KRISHNA KEY"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/b2"
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="155dp"
                            android:layout_height="58dp"
                            android:layout_below="@+id/textView5"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="46dp"
                            android:layout_marginBottom="39dp"
                            android:background="@android:drawable/alert_dark_frame"
                            android:text="Click Here to buy"
                            android:textAlignment="center">

                        </Button>
                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Text Column -->
                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="180dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/tr3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="181dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="AMITAV GHOSH"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/atomic"
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="155dp"
                            android:layout_height="58dp"
                            android:layout_below="@+id/textView5"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="46dp"
                            android:layout_marginBottom="39dp"
                            android:background="@android:drawable/alert_dark_frame"
                            android:text="Click Here to buy"
                            android:textAlignment="center">

                        </Button>
                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Text Column -->
                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="180dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/tr4" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="181dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="AMITAV GHOSH"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="155dp"
                            android:layout_height="58dp"
                            android:layout_below="@+id/textView5"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="46dp"
                            android:layout_marginBottom="39dp"
                            android:background="@android:drawable/alert_dark_frame"
                            android:text="Click Here to buy"
                            android:textAlignment="center">

                        </Button>
                    </RelativeLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Text Column -->
                    <ImageView
                        android:layout_width="118dp"
                        android:layout_height="180dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/t6" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="181dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="THE LORD OF THE RINGS"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <Button
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="155dp"
                            android:layout_height="58dp"
                            android:layout_below="@+id/textView5"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="-5dp"
                            android:layout_marginEnd="46dp"
                            android:layout_marginBottom="39dp"
                            android:background="@android:drawable/alert_dark_frame"
                            android:text="Click Here to buy"
                            android:textAlignment="center">

                        </Button>
                    </RelativeLayout>
                </TableRow>
            </TableLayout>
        </ScrollView>

    </LinearLayout>

    <TextView
        android:id="@+id/sellbook"
        style="style=&quot;@style/Widget.AppCompat.Button.Colored&quot;"
        android:layout_width="186dp"
        android:layout_height="35dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/button_background_blue"
        android:drawableLeft="@drawable/baseline_add_card_24"
        android:drawablePadding="8dp"
        android:text="Sell Books"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>
